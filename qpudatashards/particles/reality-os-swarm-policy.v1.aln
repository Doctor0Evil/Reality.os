aln
meta
  policyid     reality-os-swarm-policy.v1
  version      1.0.0
  subjectid    bostrom18sd2ujv24ual9c9pshtxys6j8knh6xaead9ye7
  description  Cyberswarm policy for Reality.os frontends under Tsafe/neurorights.
endmeta

swarm
  controller   cyberswarm
  tsafekernel  policies/bostrom-tsafe-v1.aln
  maxagents    64
  maxdepth     2          # Indirections from sovereign decisions
  mode         gated_only # Only acts on Tsafe-approved action sets
endswarm

roles
  - name       RealityClient
    may_read   BioState, EcoMetrics, AnswerQuality
    may_write  SuggestionsOnly
    forbidden  DeviceControl, NeuralStimulation

  - name       RealitySwarmAgent
    may_read   TsafeActions, DonutloopSummary
    may_write  RankedActionList
    forbidden  RawNeuralData, EnvelopeSpecs
endroles

guards
  roh
    enforceceiling   true
    ceilingvalue     0.30
  endroh

  neurorights
    policyshard      policies/bostrom-neurorights-v1.neurorights.json
    forbiddecisionuse employment, housing, credit, insurance
  endneurorights
endguards
